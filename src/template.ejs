<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Load Test Analysis Dashboard</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <!-- Google Font -->
  <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
  <!-- Chart.js -->
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <style>
    body {
      font-family: "Roboto", sans-serif;
      background: linear-gradient(135deg, #f5f6fc 0%, #ffffff 100%);
      margin: 0;
      padding: 20px;
      color: #333;
    }

    h1 {
      text-align: center;
      margin-bottom: 30px;
      font-size: 2rem;
      font-weight: 700;
      color: #2c3e50;
    }

    .dashboard {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
      gap: 20px;
      max-width: 1400px;
      margin: auto;
    }

    .card {
      background: #fff;
      border-radius: 15px;
      padding: 20px;
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.08);
      transition: transform 0.2s ease;
    }

    .card:hover {
      transform: translateY(-5px);
    }

    canvas {
      width: 100% !important;
      height: 100% !important;
    }
  </style>
</head>
<body>
  <h1>ðŸ“Š Load Test Analysis Dashboard</h1>

  <div class="dashboard">
    <!-- Line Chart -->
    <div class="card">
      <h3>Response Time (ms)</h3>
      <canvas id="responseTimeChart"></canvas>
    </div>

    <!-- Bar Chart -->
    <div class="card">
      <h3>Requests Per Second</h3>
      <canvas id="rpsChart"></canvas>
    </div>

    <!-- Doughnut Chart -->
    <div class="card">
      <h3>Request Status Distribution</h3>
      <canvas id="statusChart"></canvas>
    </div>
  </div>

  <script>
    // Line Chart - Response Time
    new Chart(document.getElementById("responseTimeChart"), {
      type: "line",
      data: {
        labels: ["1s","2s","3s","4s","5s","6s","7s","8s","9s","10s"],
        datasets: [{
          label: "Avg Response Time (ms)",
          data: [120, 140, 135, 160, 180, 200, 190, 170, 165, 150],
          borderColor: "#3498db",
          backgroundColor: "rgba(52, 152, 219, 0.2)",
          fill: true,
          tension: 0.4,
          pointRadius: 5,
          pointHoverRadius: 7
        }]
      },
      options: {
        responsive: true,
        plugins: {
          legend: { display: true, position: "top" },
          tooltip: { mode: "index", intersect: false }
        },
        interaction: { mode: "nearest", axis: "x", intersect: false },
        scales: {
          x: { title: { display: true, text: "Time (s)" } },
          y: { title: { display: true, text: "Response Time (ms)" } }
        }
      }
    });

    // Bar Chart - Requests per Second
    new Chart(document.getElementById("rpsChart"), {
      type: "bar",
      data: {
        labels: ["1s","2s","3s","4s","5s","6s","7s","8s","9s","10s"],
        datasets: [{
          label: "RPS",
          data: [10, 20, 35, 50, 60, 80, 70, 65, 55, 40],
          backgroundColor: "#2ecc71",
          borderRadius: 8
        }]
      },
      options: {
        responsive: true,
        plugins: {
          legend: { display: false },
          tooltip: { mode: "index", intersect: false }
        },
        scales: {
          x: { title: { display: true, text: "Time (s)" } },
          y: { title: { display: true, text: "Requests per Second" } }
        }
      }
    });

    // Doughnut Chart - Status Codes
    new Chart(document.getElementById("statusChart"), {
      type: "doughnut",
      data: {
        labels: ["200 OK", "400 Bad Request", "500 Server Error"],
        datasets: [{
          data: [85, 10, 5],
          backgroundColor: ["#27ae60", "#f1c40f", "#e74c3c"],
          hoverOffset: 10
        }]
      },
      options: {
        responsive: true,
        plugins: {
          legend: { position: "bottom" },
          tooltip: { callbacks: {
            label: function(ctx) {
              return ctx.label + ": " + ctx.raw + "%";
            }
          }}
        }
      }
    });
  </script>
</body>
</html>
