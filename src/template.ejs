<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>K6 Load Test Dashboard</title>
  <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.2/css/all.css">
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <style>
    body {
      margin: 0;
      font-family: 'Roboto', sans-serif;
      background: #f4f6f8;
      color: #202124;
      display: flex;
    }
    /* Sidebar */
    .sidebar {
      width: 64px;
      background: #1a73e8;
      display: flex;
      flex-direction: column;
      align-items: center;
      padding: 16px 0;
      min-height: 100vh;
    }
    .sidebar i {
      color: white;
      font-size: 22px;
      margin: 24px 0;
      cursor: pointer;
    }
    /* Content area */
    .content {
      flex: 1;
      padding: 24px;
    }
    h1 {
      font-size: 1.8rem;
      font-weight: 500;
      color: #1a73e8;
      margin-bottom: 24px;
    }
    /* Material card */
    .md-card {
      background: white;
      border-radius: 8px;
      padding: 16px;
      box-shadow: 0 2px 6px rgba(0,0,0,0.15);
      transition: box-shadow 0.3s;
    }
    .md-card:hover {
      box-shadow: 0 6px 12px rgba(0,0,0,0.2);
    }
    .card-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit,minmax(220px,1fr));
      gap: 16px;
      margin-bottom: 24px;
    }
    .md-card h4 {
      font-size: 1rem;
      font-weight: 500;
      margin: 0 0 8px;
      display: flex;
      align-items: center;
    }
    .md-card h4 i {
      margin-right: 8px;
      color: #5f6368;
    }
    .bignum {
      font-size: 2rem;
      font-weight: bold;
      color: #202124;
    }
    /* Charts full width */
    .chart-container {
      background: white;
      border-radius: 8px;
      padding: 16px;
      margin-bottom: 24px;
      box-shadow: 0 2px 6px rgba(0,0,0,0.15);
    }
    canvas {
      width: 100% !important;
      height: 350px !important;
    }
  </style>
</head>
<body>
  <!-- Sidebar -->
  <div class="sidebar">
    <i class="fas fa-tachometer-alt" title="Dashboard"></i>
    <i class="fas fa-chart-line" title="Metrics"></i>
    <i class="fas fa-tasks" title="Checks"></i>
    <i class="fas fa-cog" title="Settings"></i>
  </div>

  <!-- Content -->
  <div class="content">
    <h1>K6 Load Test Dashboard</h1>

    <!-- Cards -->
    <div class="card-grid">
      <div class="md-card">
        <h4><i class="fas fa-globe"></i> Total Requests</h4>
        <div class="bignum">125</div>
      </div>
      <div class="md-card">
        <h4><i class="fas fa-times-circle"></i> Failed Requests</h4>
        <div class="bignum" style="color:#d93025;">10</div>
      </div>
      <div class="md-card">
        <h4><i class="fas fa-check-circle"></i> Passed Checks</h4>
        <div class="bignum" style="color:#188038;">120</div>
      </div>
      <div class="md-card">
        <h4><i class="fas fa-exclamation-triangle"></i> Failed Checks</h4>
        <div class="bignum" style="color:#d93025;">5</div>
      </div>
    </div>

    <!-- Charts -->
    <div class="chart-container">
      <h4><i class="fas fa-chart-line"></i> Response Times</h4>
      <canvas id="responseChart"></canvas>
    </div>
    <div class="chart-container">
      <h4><i class="fas fa-server"></i> Status Codes</h4>
      <canvas id="statusChart"></canvas>
    </div>
  </div>

  <script>
    // Response Times Chart
    const ctx1 = document.getElementById('responseChart').getContext('2d');
    new Chart(ctx1, {
      type: 'line',
      data: {
        labels: ['0s','10s','20s','30s','40s','50s'],
        datasets: [{
          label: 'Avg Duration (ms)',
          data: [200, 250, 300, 280, 220, 260],
          borderColor: '#1a73e8',
          fill: false,
          tension: 0.3
        }]
      },
      options: {
        responsive: true,
        plugins: {legend:{display:true}}
      }
    });

    // Status Codes Chart
    const ctx2 = document.getElementById('statusChart').getContext('2d');
    new Chart(ctx2, {
      type: 'bar',
      data: {
        labels: ['2xx', '4xx', '5xx'],
        datasets: [{
          label: 'Count',
          data: [115, 7, 3],
          backgroundColor: ['#188038','#fbbc04','#d93025']
        }]
      },
      options: {
        responsive: true,
        plugins: {legend:{display:false}}
      }
    });
  </script>
</body>
</html>
